{
  "name": "chat-service",
  "version": "0.15.0",
  "private": false,
  "description": "An extensible and scalable chat-like messaging server.",
  "main": "index.js",
  "scripts": {
    "compile": "babel src --out-dir lib --ignore src/doc/",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "generate-docs": "jsdoc --configure .jsdoc.json --verbose",
    "prepare": "npm run compile",
    "pretest": "npm run compile",
    "test": "nyc mocha --exit"
  },
  "author": {
    "name": "Andrey Sharapov",
    "email": "an.sh.1@yandex.ru"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/an-sh/chat-service.git"
  },
  "keywords": [
    "chat",
    "messaging",
    "IoT",
    "framework",
    "websocket",
    "websockets",
    "service",
    "microservice",
    "cluster"
  ],
  "engines": {
    "node": ">=4"
  },
  "license": "MIT",
  "dependencies": {
    "bluebird": "^3.3.5",
    "check-types": "^7.0.0",
    "event-to-promise": "^0.8.0",
    "ioredis": "^3.2.2",
    "lodash": "^4.11.1",
    "promise-retry": "^1.1.0",
    "safe-buffer": "^5.0.1",
    "semver": "^5.3.0",
    "socket.io": "^2.0.4",
    "socket.io-redis": "^5.2.0",
    "uid-safe": "^2.1.0"
  },
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-preset-es2015-node4": "^2.1.0",
    "chai": "^4.1.2",
    "codecov": "^3.0.0",
    "docdash": "^0.4.0",
    "jsdoc": "^3.4.0",
    "mocha": "^4.1.0",
    "nyc": "^11.4.1",
    "socket.io-client": "^2.0.4",
    "standard": "^10.0.3",
    "wtfnode": "^0.5.7"
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ]
  }
}
