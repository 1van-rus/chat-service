{
  "name": "chat-service",
  "version": "0.10.1",
  "private": false,
  "description": "An extensible and scalable chat-like messaging server.",
  "main": "index.js",
  "scripts": {
    "compile": "babel src --out-dir lib --ignore src/doc/",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "generate-docs": "jsdoc --configure .jsdoc.json --verbose",
    "prepublish": "npm run compile",
    "pretest-legacy": "npm run compile",
    "test": "nyc mocha",
    "test-legacy": "mocha -r babel-register"
  },
  "author": {
    "name": "Andrey Sharapov",
    "email": "an.sh.1@yandex.ru"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/an-sh/chat-service.git"
  },
  "keywords": [
    "chat",
    "messaging",
    "IoT",
    "framework",
    "websocket",
    "websockets",
    "service",
    "microservice",
    "cluster"
  ],
  "engines": {
    "node": ">=0.12.0"
  },
  "license": "MIT",
  "dependencies": {
    "babel-runtime": "^6.9.2",
    "bluebird": "^3.3.5",
    "check-types": "^7.0.0",
    "collections": "^5.0.1",
    "es6-mixin": "^0.3.0",
    "event-to-promise": "^0.7.0",
    "has-binary": "^0.1.7",
    "ioredis": "^2.0.0",
    "lodash": "^4.11.1",
    "promise-retry": "^1.1.0",
    "safe-buffer": "^5.0.1",
    "semver": "^5.3.0",
    "socket.io": "^1.4.5",
    "socket.io-redis": "^1.0.0",
    "uid-safe": "^2.1.0"
  },
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-plugin-transform-runtime": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-register": "^6.9.0",
    "chai": "^3.5.0",
    "codecov": "^1.0.1",
    "docdash": "^0.4.0",
    "jsdoc": "^3.4.0",
    "mocha": "^3.0.0",
    "nyc": "^8.1.0",
    "socket.io-client": "^1.4.5",
    "standard": "^8.0.0"
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ]
  }
}
